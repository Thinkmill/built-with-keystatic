---
const seoImage = `${Astro.site}seo-image.png`;
---

<meta
  name="robots"
  content={import.meta.env.MODE === "production"
    ? "index, follow"
    : "noindex, nofollow"}
/>
<meta
  name="description"
  content="A collection of projects using Keystatic to manage parts of their codebase."
/>

<!-- OG tags -->
<meta property="og:title" content="Built With Keystatic" />
<meta
  property="og:description"
  content="A collection of projects using Keystatic to manage parts of their codebase."
/>
<meta property="og:type" content="website" />
<meta property="og:image" content={seoImage} />
<meta property="og:url" content={Astro.site} />
<meta property="og:image:url" content={seoImage} />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="1200" />
<meta property="og:image:alt" content="Built with Keystatic" />

<!-- Twitter tags -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:site" content="@thekeystatic" />
<meta name="twitter:creator" content="@thekeystatic" />
<meta name="twitter:title" content="Keystatic" />
<meta
  name="twitter:description"
  content="A collection of projects using Keystatic to manage parts of their codebase."
/>
<meta name="twitter:image" content={seoImage} />
